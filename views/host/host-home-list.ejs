<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AIR BNB</title>
  <script src="https://cdn.tailwindcss.com">
  </script>
</head>
<body class="min-h-screen bg-gradient-to-br from-cyan-700 via-purple-700 to-pink-500 flex flex-col">
  <div>
    <%-include('../partials/nav.ejs')%>
    <div class="flex flex-col items-center justify-center mt-12 mb-8">
      <h1 class="font-extrabold text-4xl md:text-5xl text-yellow-400 drop-shadow-lg mb-8 tracking-wide">Your Hosted Homes</h1>
      <div class="w-24 h-1 bg-yellow-400 rounded-full mb-8"></div>
    </div>
    <div class="flex flex-wrap justify-center gap-10 px-4 pb-16">
      <% if (homes.length === 0) { %>
        <div class="bg-white/80 rounded-xl shadow-lg p-10 text-center text-gray-700 text-xl font-semibold">
          No homes hosted yet. <br>
          <a href="/host/editHome" class="inline-block mt-4 px-6 py-2 bg-yellow-400 text-gray-900 rounded-full font-bold shadow hover:bg-yellow-500 transition">Add a Home</a>
        </div>
      <% } %>
      <% homes.forEach(h => { %>
        <div class="relative bg-white/90 rounded-3xl shadow-2xl hover:shadow-yellow-400/40 transition-shadow duration-300 w-80 flex flex-col items-center p-6 group">
          <div class="w-48 h-48 rounded-2xl overflow-hidden shadow-lg mb-4 border-4 border-yellow-300 group-hover:scale-105 transition-transform duration-300">
            <img src="<%= h.PhotoURL %>" alt="HomeImage" class="object-cover w-full h-full group-hover:scale-110 transition-transform duration-500" />
          </div>
          <div class="flex flex-col items-center gap-1 w-full">
            <h2 class="text-2xl font-bold text-gray-800 mb-1 flex items-center gap-2">
              <span class="text-yellow-500">üè†</span> <%= h.HomeName %>
            </h2>
            <p class="text-gray-600 text-lg flex items-center gap-2">
              <span class="text-pink-500">üìç</span> <%= h.Location %>
            </p>
            <p class="text-gray-700 text-lg flex items-center gap-2">
              <span class="text-green-500">üí≤</span> <%= h.Price %>
            </p>
            <p class="text-yellow-500 text-lg flex items-center gap-2 font-semibold animate-pulse">
              <span>‚≠ê</span> <%= h.Rating %>
            </p>
          </div>
          <div class="flex justify-between w-full mt-6 gap-4">
            <a href="/editHome/<%=h._id%>?editing=true"
               class="flex-1 py-2 bg-gradient-to-r from-yellow-400 to-yellow-500 text-gray-900 font-bold rounded-xl shadow hover:from-yellow-500 hover:to-yellow-400 hover:scale-105 transition text-center">
              Update
            </a>
            <a href="/deleteHome/<%=h._id%>?editing=true"
               class="flex-1 py-2 bg-gradient-to-r from-red-400 to-pink-500 text-white font-bold rounded-xl shadow hover:from-pink-500 hover:to-red-400 hover:scale-105 transition text-center">
              Delete
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>